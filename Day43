package javaapplication89;

import java.util.Scanner;

public class JavaApplication89 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
    Scanner serli = new Scanner(System.in);
    int nilai = serli.nextInt();
    int nilai1 = serli.nextInt();
    int hasil = 0;
    
        for (int i = 1; i <= nilai; i++) {
            System.out.print(i);
            hasil += i;
            for (int j = 1; j < nilai1; j++) {
                System.out.print(j);
                hasil += j;
            if(i < nilai){
                System.out.print(" + ");
            }else if ( j < nilai1){
                System.out.print(" - ");
            }
            
        }
        System.out.println("=" + hasil);
    }
    
}}
